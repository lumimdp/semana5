<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contacto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margen_horizontal"
        android:paddingRight="@dimen/margen_horizontal"
        android:paddingTop="@dimen/margen_vertical"
        android:paddingBottom="@dimen/margen_vertical"
        android:orientation="vertical">

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Nombre"
        android:paddingLeft="@dimen/margen_horizontal" />

    <EditText
        android:id="@+id/etMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="E-mail"
        android:paddingLeft="@dimen/margen_horizontal" />

        <EditText
            android:id="@+id/etMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Deje su mensaje"/>

        <Button
            android:id="@+id/btnSEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:onClick="enviarMail"
            android:shadowRadius="30"
            android:text="Siguiente"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200" />

    </LinearLayout>

</RelativeLayout>